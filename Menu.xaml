<Window x:Class="Demo334.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo334"
        mc:Ignorable="d"
        Title="Menu" Height="820" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#FEA9AB" Orientation="Horizontal">
            <Image Source=".//Resources/Черновик.png" Margin="10"/>
            <StackPanel Orientation="Horizontal"  Margin="1000 0 0 0">
                <Button x:Name="BtnBack" FontSize = "17" Foreground="White" HorizontalAlignment="Right" Background="#EAB14D" Width="120" Height="50" FontFamily="Segoe Print" Click="BtnBack_Click" Content="Назад"/>
            </StackPanel>
        </StackPanel >

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Image Source=".//Resources/Черновик.png" Opacity=".1" Width="490"/>
        </StackPanel>
        <Frame x:Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
